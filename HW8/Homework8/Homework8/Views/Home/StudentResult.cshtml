@model IEnumerable<Homework8.Models.ViewModels.AthleteResultViewModel>

<style>
    .button {
    margin-top: 10px;
    width: 280px;
    background-color: orange;
    color: white;
    font-size: 20px;
}

    .text-area {
    color: black;
    font-size: 30px;
    width: 280px;
    text-align: center;
}

</style>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="text-area">Athlete Search</div>
            <label for="searchName"></label>
            @Html.TextBox("searchName", null, htmlAttributes: new { @class = "form-control", required = "required", placeholder = "Enter an athlete name " })
            <button class="button">View Results</button>
        </div>
    </div>
    <br />


    <div class="row">

        <div class="col-md-7 tableStyle">
            <h4 class="StockInfo"> Athlete Results </h4>
            <hr />
            <div class="row">
                <div class="col-md-10">
                    <table class="table">
                        <tr>
                            <th>
                                @{<text>Meet Date</text>}
                            </th>
                            <th>
                                @{<text>Event</text>}
                            </th>
                            <th>
                                @{<text>Location</text>}
                            </th>
                            <th>
                                @{<text>Time</text>}
                            </th>
                        </tr>

                        @foreach (var item in Model.FirstOrDefault().athleteResults)
                        {
                            <tr>
                                <td>
                                    @item.MeetDate.Date.ToString("yyyy/MM/dd")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Event1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RaceTime)
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
}
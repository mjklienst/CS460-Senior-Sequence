@{
    ViewBag.Title = "Home Page";
}

<style>
    #tableDetails {
        border-style: groove;
        border-radius: 20px;
        background-image: url("/Content/tree.jpg");
        background-position: 100%;
    }

    table, td {
        border: 1px solid black;
        color: black;
        background-color: white;
    }

    #name {
        margin-left: 40px;
        color: black;
        margin: 30px;
        text-align: center;
        background-color: #ffffff;
        border: 1px solid black;
        opacity: 0.6;
        filter: alpha(opacity=60);
    }

    .col-md-9 {
        text-align: center;
    }

    #userStuff {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 20px;
        color: black;
        text-align: center;
        list-style-type: none;
        margin: 30px;
        background-color: #ffffff;
        border: 1px solid black;
        opacity: 0.6;
        filter: alpha(opacity=60);
    }

    .prettyBox {
        border-style: groove;
        background-color: orangered;
        padding-left: 15px;
        padding-right: 10px;
        padding-bottom: 5px;
        color: white;
    }

    .col-md-2 {
        margin: 20px;
    }

    body {
        background-color: lightblue;
    }


    .prettyBox img {
        height: 120px;
        width: 120px;
        border: solid;
        border-color: black;
        box-shadow: 0px 15px 15px 0px black;
        margin-bottom: -16px;
        margin-left: -26px;
        border-radius: 10%;
    }

    img {
        margin-left: -15px;
        border-radius: 10px;
    }

    input {
        margin-right: -33px;
        margin-top: -30px;
    }

    a {
        color: darkred;
    }
</style>

